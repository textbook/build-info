{
	"$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
	"checkers": [
		"typescript"
	],
	"coverageAnalysis": "perTest",
	"ignorePatterns": [
		"lib/"
	],
	"packageManager": "npm",
	"reporters": [
		"html",
		"clear-text",
		"progress"
	],
	"testRunner": "mocha",
	"testRunnerNodeArgs": [
		"--loader=ts-node/esm"
	],
	"tsconfigFile": "tsconfig.json",
	"typescriptChecker": {
		"prioritizePerformanceOverAccuracy": false
	}
}
